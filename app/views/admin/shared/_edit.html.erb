<% className = form_action.delete(:class) %>
<%= form_tag(form_action, :id => "#{form_type}_form", :enctype => "multipart/form-data", :class => className) do %>

  <%= render :partial => "form" %>

<% end %>

<% if @article.id %>
  <%= form_tag :controller => 'admin/content', :action => 'merge' do %>
    <h3>Merge Articles</h3>
    Article ID <%= text_field_tag 'merge_with' %>
    <br>
    <%= submit_tag "Merge" %>
  <% end %>
<% end %>
